<ScreenDyslexia>:
    name: 'ScreenDyslexia'
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Rinat'
            size_hint_y: None
            height: '29sp'
        ScrollView:
            do_scroll_x: False
            bar_width: 10
            scroll_type: ['bars','content']
            GridLayout:
                id: gridlayout_words
                cols: 3
                rows: 200
                spacing: 2
                size_hint_y: None
                height: self.minimum_height
                Spinner:
                    id: 'condition_spinner'
                    text: 'condition'
                    name:'s1'
                    font_size: 16
                    background_color: 1,0,0,1
                    values: ('c-g-','c+g-','c-g+','c+g+')
                    size: root.width * 0.15, root.height * 0.07
                    pos: root.width * 0.62, root.height * 0.8 - self.height * 0.5
                    on_text: app.condition_selected()
                LabelB:
                    text: 'תועט גוס'
                    size_hint_y: None
                    bcolor: 1, 0, 0, 1
                LabelB:
                    text: 'הבוגת'
                    size_hint_y: None
                    bcolor: 1, 0, 0, 1
                LabelB:
                    text: 'הלימ'
                    size_hint_y: None
                    bcolor: 1, 0, 0, 1


