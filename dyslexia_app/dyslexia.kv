<ScreenDyslexia>:
    name: 'ScreenDyslexia'
    BoxLayout:
        orientation: 'vertical'
        id: 'single'
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: menu
            pos: 0 , 0
            size: root.width, root.height * 0.1
            size_hint_y: None
            height: '48dp'

            ToggleButtonDyslexia:
                id: menu_summary
                text:'ןוחביא'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('diagnosis')

            ToggleButtonDyslexia:
                id: menu_summary
                text:'תואיגש םוכיס'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('summary')

            ToggleButtonDyslexia:
                id: menu_tefel
                text:'לפת תולימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('tefel')

            ToggleButtonDyslexia:
                id: menu_single
                text: 'תודדוב םילימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                state: 'down'
                on_press:  app.change_tab('single')

        LabelDyslexia:
            text: '   13 - ליג  ,הבקנ - ןימ'
            size_hint_y: None
            height: '29sp'
            bcolor: 52/255.0, 164/255.0, 204/255.0, 1
            bcolor: 1,1,1,1

        FloatLayout:
            size: root.width, root.height
            pos: 0,0

            FloatLayout:
                ScrollView:
                    id: scroll_content
                    do_scroll_x: False
                    bar_width: 10
                    padding: 5
                    opacity: 1
                    disables: False
                    scroll_type: ['bars','content']


            FloatLayout:
                id: help_widget
                opacity: 1
                size: 200,200
                #pos: 300, 300
                #size_hint: ('0.5','0.5')
                size_hint:(None,None)
                pos_hint: {'center_x':0.5, 'y':0.2}
                #size_hint_y: None
                bcolor: 0,0,1,1
                borders: 2,'solid',(1,1,1,1.1)
                canvas.before:
                    Color:
                        rgba: self.bcolor
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: '   הרזע'
                    color: 0,0,0,1
                    size_hint:(0.9,0.9)
                    pos_hint: {'center_x':0.5,'center_y':0.5}
                    font_size: '18sp'
                    font_name: 'fonts/the_font.ttf'
                    bcolor: 1,1,1,1
                    borders: 2,'solid',(1,1,1,1.1)
                    canvas.before:
                        Color:
                            rgba: self.bcolor
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    size_hint:(0.1,0.1)
                    pos_hint: {'center_x':0.9,'center_y':0.9}
                    text:'x'
                    on_press: help_widget.opacity=0




