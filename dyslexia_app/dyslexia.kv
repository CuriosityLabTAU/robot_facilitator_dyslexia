<ScreenDyslexia>:
    name: 'ScreenDyslexia'
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Rinat'
            size_hint_y: None
            height: '29sp'
        ScrollView:
            do_scroll_x: False
            bar_width: 10
            scroll_type: ['bars','content']
            GridLayout:
                id: gridlayout_words
                cols: 2
                rows: 200
                size_hint_y: None
                height: self.minimum_height
                Label:
                    text: 'Title'
                    size_hint_y: None
                    height: '29sp'
                Label:
                    text: 'Title'
                    size_hint_y: None
                    height: '29sp'

