<ScreenDyslexiaSingle>:
    name: 'ScreenDyslexiaSingle'
    BoxLayout:
        orientation: 'vertical'
        id: 'single'
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: menu
            size_hint_y: None
            height: '48dp'

            ToggleButton:
                id: menu_summary
                text:'םוכיס'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_screen('summary')

            ToggleButton:
                id: menu_tefel
                text:'לפת תולימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_screen('tefel')


            ToggleButton:
                id: menu_single
                text: 'תודדוב םילימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                state: 'down'
                on_press:  app.change_screen('single')

        Label:
            text: 'Rinat'
            size_hint_y: None
            height: '29sp'
        ScrollView:
            id: single_content
            do_scroll_x: False
            bar_width: 10
            padding: 5
            scroll_type: ['bars','content']
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: gridlayout_words
                cols: 3
                rows: 200
                spacing: 2
                size_hint_y: None
                padding: '50dp'
                height: self.minimum_height

                LabelB:
                    text: 'תועט גוס'
                    size_hint_y: None
                    bcolor: 1, 0, 0, 1
                LabelB:
                    text: 'הבוגת'
                    size_hint_y: None
                    bcolor: 1, 0, 0, 1
                LabelB:
                    text: 'הלימ'
                    size_hint_y: None
                    bcolor: 1, 0, 0, 1

