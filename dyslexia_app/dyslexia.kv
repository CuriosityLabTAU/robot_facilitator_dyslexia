<ScreenDyslexia>:
    name: 'ScreenDyslexia'
    BoxLayout:
        orientation: 'vertical'
        id: 'single'
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: menu
            pos: 0 , 0
            size: root.width, root.height * 0.1
            size_hint_y: None
            height: '48dp'

            ToggleButtonDyslexia:
                id: menu_summary
                text:'ןוחביא'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('diagnosis')

            ToggleButtonDyslexia:
                id: menu_summary
                text:'תואיגש םוכיס'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('summary')

            ToggleButtonDyslexia:
                id: menu_tefel
                text:'לפת תולימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('tefel')

            ToggleButtonDyslexia:
                id: menu_single
                text: 'תודדוב םילימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                state: 'down'
                on_press:  app.change_tab('single')

        LabelDyslexia:
            text: '   13 - ליג  ,הבקנ - ןימ'
            size_hint_y: None
            height: '29sp'
            bcolor: 52/255.0, 164/255.0, 204/255.0, 1
            bcolor: 1,1,1,1

        FloatLayout:
            size: root.width, root.height
            FloatLayout:
                ScrollView:
                    id: scroll_content
                    do_scroll_x: False
                    bar_width: 10
                    padding: 5
                    opacity: 1
                    disables: False
                    scroll_type: ['bars','content']





